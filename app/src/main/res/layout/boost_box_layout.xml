<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardBackgroundColor="@color/colorGrey"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="6dp"
    android:padding="8dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/bluetooth_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Title"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:padding="1dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours Run"
                android:padding="1dp"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/boost_box_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:padding="1dp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energy Used"
                android:padding="1dp"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/boost_box_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76"
                android:padding="1dp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>